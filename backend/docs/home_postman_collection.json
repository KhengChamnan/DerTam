{
  "info": {
    "name": "Home API (Flat JSON)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Categories",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/place-categories",
          "host": ["{{base_url}}"],
          "path": ["api","place-categories"]
        }
      }
    },
    {
      "name": "Search Places",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/places/search?q=lake&limit=10",
          "host": ["{{base_url}}"],
          "path": ["api","places","search"],
          "query": [
            {"key":"q","value":"lake"},
            {"key":"limit","value":"10"}
          ]
        }
      }
    },
    {
      "name": "By Category - Popular",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/places/by-category?category=popular&per_page=10&page=1",
          "host": ["{{base_url}}"],
          "path": ["api","places","by-category"],
          "query": [
            {"key":"category","value":"popular"},
            {"key":"per_page","value":"10"},
            {"key":"page","value":"1"}
          ]
        }
      }
    },
    {
      "name": "By Category - By ID (example)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/places/by-category?category_id=1&per_page=10&page=1",
          "host": ["{{base_url}}"],
          "path": ["api","places","by-category"],
          "query": [
            {"key":"category_id","value":"1"},
            {"key":"per_page","value":"10"},
            {"key":"page","value":"1"}
          ]
        }
      }
    },
    {
      "name": "Recommended",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/places/recommended?limit=10",
          "host": ["{{base_url}}"],
          "path": ["api","places","recommended"],
          "query": [
            {"key":"limit","value":"10"}
          ]
        }
      }
    },
    {
      "name": "Upcoming Events",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/events/upcoming?limit=10",
          "host": ["{{base_url}}"],
          "path": ["api","events","upcoming"],
          "query": [
            {"key":"limit","value":"10"}
          ]
        }
      }
    }
  ],
  "variable": [
    {"key": "base_url", "value": "https://elegant-many-oyster.ngrok-free.app"}
  ]
}


