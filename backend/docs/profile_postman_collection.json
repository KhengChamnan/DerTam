						},
						"url": {
							"raw": "{{base_url}}/profile",
							"host": ["{{base_url}}"],
							"path": ["profile"]
						},
						"description": "Update profile including profile image upload. Uses form-data for file upload with Laravel method spoofing."
					},
					"response": []
