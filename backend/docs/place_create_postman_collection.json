{
  "info": {
    "_postman_id": "8a7b8d3b-8f9a-4d2e-9f0a-PLACE-CREATE-API",
    "name": "Place API - Create Place",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection to create a Place via API with Cloudinary uploads (single or multiple images)."
  },
  "item": [
    {
      "name": "Create Place (single image)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "Sample Place", "type": "text" },
            { "key": "description", "value": "Nice place for testing.", "type": "text" },
            { "key": "category_id", "value": "1", "type": "text" },
            { "key": "province_id", "value": "1", "type": "text" },
            { "key": "google_maps_link", "value": "https://maps.google.com/?q=11.5564,104.9282", "type": "text" },
            { "key": "ratings", "value": "4.5", "type": "text" },
            { "key": "reviews_count", "value": "10", "type": "text" },
            { "key": "entry_free", "value": "true", "type": "text" },
            { "key": "operating_hours", "value": "{\n  \"mon\": \"9:00-17:00\",\n  \"tue\": \"9:00-17:00\"\n}", "type": "text" },
            { "key": "best_season_to_visit", "value": "Summer", "type": "text" },
            { "key": "latitude", "value": "11.5564", "type": "text" },
            { "key": "longitude", "value": "104.9282", "type": "text" },
            { "key": "image", "type": "file", "src": [
              "C:/path/to/your/image.jpg"
            ] }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/places",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "places"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Create Place (multiple images)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "Sample Place Multiple", "type": "text" },
            { "key": "description", "value": "Place with multiple images.", "type": "text" },
            { "key": "category_id", "value": "1", "type": "text" },
            { "key": "province_id", "value": "1", "type": "text" },
            { "key": "entry_free", "value": "false", "type": "text" },
            { "key": "images[]", "type": "file", "src": [
              "C:/path/to/your/image1.jpg"
            ] },
            { "key": "images[]", "type": "file", "src": [
              "C:/path/to/your/image2.jpg"
            ] }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/places",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "places"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "token", "value": "<paste_sanctum_token_here>" }
  ]
}


