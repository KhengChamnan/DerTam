{
  "info": {
    "_postman_id": "expense-budget-api-collection",
    "name": "Expense & Budget Management API",
    "description": "Collection for testing Expense and Budget Management endpoints. Includes all CRUD operations for budgets and expenses with currency support (USD, KMR).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/login",
              "host": ["{{base_url}}"],
              "path": ["api", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Budget Management",
      "item": [
        {
          "name": "Create Budget",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"trip_id\": 1,\n  \"total_budget\": 5000,\n  \"currency\": \"USD\",\n  \"description\": \"Budget for summer vacation trip\",\n  \"expenses\": [\n    {\n      \"name\": \"Flight Tickets\",\n      \"amount\": 2000,\n      \"date\": \"2025-01-15\",\n      \"description\": \"Flight to Bangkok\",\n      \"category_id\": 1\n    },\n    {\n      \"name\": \"Hotel Accommodation\",\n      \"amount\": 1500,\n      \"date\": \"2025-01-16\",\n      \"description\": \"3 nights at luxury resort\",\n      \"category_id\": 2\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/budgets",
              "host": ["{{base_url}}"],
              "path": ["api", "budgets"]
            }
          },
          "response": []
        },
        {
          "name": "Get Budget Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/trips/{{tripId}}/budget",
              "host": ["{{base_url}}"],
              "path": ["api", "trips", "{{tripId}}", "budget"]
            }
          },
          "response": []
        },
        {
          "name": "Update Budget",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"total_budget\": 6000,\n  \"description\": \"Updated budget for summer vacation trip\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/budgets/{{budgetId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "budgets", "{{budgetId}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Expense Management",
      "item": [
        {
          "name": "Add Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Restaurant Dinner\",\n  \"amount\": 250,\n  \"currency\": \"USD\",\n  \"date\": \"2025-01-17\",\n  \"description\": \"Dinner at local Thai restaurant\",\n  \"category_id\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/budgets/{{budgetId}}/expenses",
              "host": ["{{base_url}}"],
              "path": ["api", "budgets", "{{budgetId}}", "expenses"]
            }
          },
          "response": []
        },
        {
          "name": "Update Expense",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Restaurant Lunch\",\n  \"amount\": 150,\n  \"date\": \"2025-01-17\",\n  \"description\": \"Lunch at Thai restaurant\",\n  \"category_id\": 3\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/expenses/{{expenseId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "{{expenseId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Expense",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/expenses/{{expenseId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "{{expenseId}}"]
            }
          },
          "response": []
        }
      ]
    }
  ],
