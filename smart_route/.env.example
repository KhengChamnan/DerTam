# ============================================
# Environment Configuration (FREE SETUP)
# Copy this file to .env and fill in values
# ============================================

# Python Service
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8001

# Database (Connect to Laravel's MySQL - FREE)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dertam
DB_USER=root
DB_PASSWORD=

# Routing Engine (Choose FREE option)
# Option 1: Public OSRM (FREE but rate-limited)
ROUTING_ENGINE=osrm_public
OSRM_URL=http://router.project-osrm.org

# Option 2: Self-hosted OSRM (FREE unlimited - run with Docker)
# ROUTING_ENGINE=osrm_local
# OSRM_URL=http://localhost:5000

# Option 3: Simple Haversine distance (FREE - no external API)
# ROUTING_ENGINE=haversine

# Quantum Simulation (FREE - No IBM Quantum account needed)
QUANTUM_BACKEND=qiskit_aer  # FREE local simulator
QUANTUM_SHOTS=1024          # Number of measurements
QAOA_LAYERS=2               # Ansatz depth (p parameter)
QAOA_OPTIMIZER=COBYLA       # Classical optimizer for QAOA parameters

# Algorithm Settings
CLASSICAL_ALGORITHM=ortools  # Options: nearest_neighbor, two_opt, ortools, genetic
MAX_POIS_FOR_QUANTUM=4      # Quantum limited to 4 POIs (16 qubits)
OPTIMIZATION_TIMEOUT=60      # Seconds

# Dynamic Re-optimization Triggers
TRAFFIC_THRESHOLD=0.15       # 15% increase triggers recalculation
DEVIATION_DISTANCE=200       # Meters from route
DEVIATION_TIME=300           # Seconds (5 minutes)

# Visualization
SAVE_CIRCUIT_DIAGRAMS=True
CIRCUIT_OUTPUT_DIR=./outputs/circuits
SAVE_COMPARISON_CHARTS=True
CHART_OUTPUT_DIR=./outputs/charts

# Laravel Backend Integration
LARAVEL_API_URL=http://localhost:8000/api
LARAVEL_API_TOKEN=  # Optional: for secure communication

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/smart_route.log

# ============================================
# ALL SETTINGS USE FREE SERVICES ONLY
# No paid API keys or subscriptions required
# ============================================
